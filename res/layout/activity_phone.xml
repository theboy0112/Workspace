<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    tools:context=".Phone">

    <!-- Dialed Number Display -->
    <EditText
        android:id="@+id/dialedNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#F5F6FA"
        android:hint="PolicÃ­a Nacional de Pilipinas\nCALAPE PNP - 0991\nLOON PNP - 3212\nTAGBILARAN PNP - 7261\nTUBIGON PNP - 0951\nLOON PNP - 1222\nTAGBILARAN PNP - 7561"
        android:textColorHint="#3F3F3F"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#212121"
        android:padding="20dp"
        android:maxLines="10"
        android:inputType="none"
        android:focusable="false"
        android:cursorVisible="false"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Number Pad -->
    <GridLayout
        android:id="@+id/numberPad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:background="#F5F6FA"
        android:alignmentMode="alignMargins"
        android:padding="16dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/dialedNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Row 1 -->
        <Button
            android:id="@+id/button1"
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/round_button"
            android:elevation="3dp"
            android:layout_margin="8dp"/>
        <Button
            android:id="@+id/button2"
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/round_button"
            android:elevation="3dp"
            android:layout_margin="8dp"/>
        <Button
            android:id="@+id/button3"
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/round_button"
            android:elevation="3dp"
            android:layout_margin="8dp"/>

        <!-- Row 2 -->
        <Button
            android:id="@+id/button4"
            android:text="4"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/round_button"
            android:elevation="3dp"
            android:layout_margin="8dp"/>
        <Button
            android:id="@+id/button5"
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/round_button"
            android:elevation="3dp"
            android:layout_margin="8dp"/>
        <Button
            android:id="@+id/button6"
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/round_button"
            android:elevation="3dp"
            android:layout_margin="8dp"/>

        <!-- Row 3 -->
        <Button
            android:id="@+id/button7"
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/round_button"
            android:elevation="3dp"
            android:layout_margin="8dp"/>
        <Button
            android:id="@+id/button8"
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/round_button"
            android:elevation="3dp"
            android:layout_margin="8dp"/>
        <Button
            android:id="@+id/button9"
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/round_button"
            android:elevation="3dp"
            android:layout_margin="8dp"/>

        <!-- Row 4 -->
        <Button
            android:id="@+id/buttonStar"
            android:text="*"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/round_button"
            android:elevation="3dp"
            android:layout_margin="8dp"/>
        <Button
            android:id="@+id/button0"
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/round_button"
            android:elevation="3dp"
            android:layout_margin="8dp"/>
        <Button
            android:id="@+id/buttonHash"
            android:text="#"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/round_button"
            android:elevation="3dp"
            android:layout_margin="8dp"/>

        <!-- Row 5 -->
        <Button
            android:id="@+id/buttonDelete"
            android:text="DEL"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/baseline_delete_24"
            android:elevation="3dp"
            android:layout_margin="8dp"
            android:layout_columnSpan="1"/>

        <!-- Call Button -->
        <Button
            android:id="@+id/buttonCall"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_margin="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/baseline_call_button_24"
            android:text="CALL"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:elevation="4dp" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>